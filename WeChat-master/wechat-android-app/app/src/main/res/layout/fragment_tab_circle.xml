<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_header"
        android:background="@drawable/selector_button_color_item">

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginStart="@dimen/x_20"
            android:background="@drawable/ic_icon_circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x_48"
            android:layout_marginStart="@dimen/x_80"
            android:layout_marginTop="@dimen/x_12"
            android:textSize="@dimen/font_normal"
            android:textColor="#000000"
            android:text="@string/circle"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginEnd="@dimen/x_20"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_right_arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"
            android:layout_marginTop="@dimen/x_60"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_circle"
        android:layout_marginTop="@dimen/x_10"
        android:background="@drawable/selector_button_color_item">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginStart="@dimen/x_20"
            android:background="@drawable/ic_icon_scan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x_48"
            android:layout_marginStart="@dimen/x_80"
            android:layout_marginTop="@dimen/x_12"
            android:textSize="@dimen/font_normal"
            android:textColor="#000000"
            android:text="@string/scan"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginEnd="@dimen/x_20"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_right_arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"
            android:layout_marginTop="@dimen/x_60"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_scan"
        android:background="@drawable/selector_button_color_item">

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginStart="@dimen/x_20"
            android:background="@drawable/ic_shake"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x_48"
            android:layout_marginStart="@dimen/x_80"
            android:layout_marginTop="@dimen/x_12"
            android:textSize="@dimen/font_normal"
            android:textColor="#000000"
            android:text="@string/shake"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginEnd="@dimen/x_20"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_right_arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"
            android:layout_marginTop="@dimen/x_60"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_look"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_shake"
        android:layout_marginTop="@dimen/x_10"
        android:background="@drawable/selector_button_color_item">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginStart="@dimen/x_20"
            android:background="@drawable/ic_look"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x_48"
            android:layout_marginStart="@dimen/x_80"
            android:layout_marginTop="@dimen/x_12"
            android:textSize="@dimen/font_normal"
            android:textColor="#000000"
            android:text="@string/look"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginEnd="@dimen/x_20"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_right_arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"
            android:layout_marginTop="@dimen/x_60"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_look"
        android:background="@drawable/selector_button_color_item">

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginStart="@dimen/x_20"
            android:background="@drawable/ic_search"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x_48"
            android:layout_marginStart="@dimen/x_80"
            android:layout_marginTop="@dimen/x_12"
            android:textSize="@dimen/font_normal"
            android:textColor="#000000"
            android:text="@string/search"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginEnd="@dimen/x_20"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_right_arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"
            android:layout_marginTop="@dimen/x_60"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_shopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_search"
        android:layout_marginTop="@dimen/x_10"
        android:background="@drawable/selector_button_color_item">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginStart="@dimen/x_20"
            android:background="@drawable/ic_shopping"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x_48"
            android:layout_marginStart="@dimen/x_80"
            android:layout_marginTop="@dimen/x_12"
            android:textSize="@dimen/font_normal"
            android:textColor="#000000"
            android:text="@string/shopping"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginEnd="@dimen/x_20"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_right_arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"
            android:layout_marginTop="@dimen/x_60"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_shopping"
        android:background="@drawable/selector_button_color_item">

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginStart="@dimen/x_20"
            android:background="@drawable/ic_game"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x_48"
            android:layout_marginStart="@dimen/x_80"
            android:layout_marginTop="@dimen/x_12"
            android:textSize="@dimen/font_normal"
            android:textColor="#000000"
            android:text="@string/game"/>

        <ImageView
            android:layout_width="@dimen/x_30"
            android:layout_height="@dimen/x_30"
            android:layout_marginTop="@dimen/x_15"
            android:layout_marginEnd="@dimen/x_20"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_right_arrow"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"
            android:layout_marginTop="@dimen/x_60"/>
    </RelativeLayout>
</RelativeLayout>