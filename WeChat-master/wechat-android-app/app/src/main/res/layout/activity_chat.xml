<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/layoutBackground">

        <RelativeLayout
            android:id="@+id/rl_chat_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/itemBackground">

            <ImageButton
                android:id="@+id/bt_back"
                android:layout_width="@dimen/x_32"
                android:layout_height="@dimen/x_32"
                android:layout_marginStart="@dimen/x_16"
                android:layout_marginTop="@dimen/x_32"
                android:background="@drawable/ic_icon_left"/>
            
            <TextView
                android:id="@+id/tv_receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x_68"
                android:layout_marginTop="@dimen/x_30"
                android:textSize="@dimen/x_24"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/bt_point"
                android:layout_width="@dimen/x_32"
                android:layout_height="@dimen/x_32"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/x_16"
                android:layout_marginTop="@dimen/x_32"
                android:background="@drawable/ic_icon_more"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x_05"
                android:background="@color/blackLine"
                android:layout_marginTop="@dimen/x_80"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_chat_bottom"
            android:layout_below="@+id/rl_chat_top"/>

    <LinearLayout
        android:id="@+id/ll_chat_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@color/itemBackground"
            android:gravity="center"
            android:padding="@dimen/x_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_voice"
                android:layout_width="@dimen/x_40"
                android:layout_height="@dimen/x_40"
                android:src="@mipmap/icon_voice" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/x_50"
                android:layout_weight="1"
                android:paddingLeft="@dimen/x_16"
                android:paddingRight="@dimen/x_16">

                <EditText
                    android:id="@+id/et_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius_edit"
                    android:maxLines="3"
                    android:minHeight="@dimen/x_45"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:paddingStart="@dimen/x_16" />

                <cn.csu.software.wechat.widget.RecordButton
                    android:id="@+id/bt_record"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_session_btn_voice"
                    android:text="按住说话"
                    android:textSize="13dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/bt_expression"
                android:layout_width="@dimen/x_40"
                android:layout_height="@dimen/x_40"
                android:layout_marginEnd="@dimen/x_16"
                android:src="@mipmap/icon_expression" />

            <ImageView
                android:id="@+id/bt_more"
                android:layout_width="@dimen/x_40"
                android:layout_height="@dimen/x_40"
                android:src="@mipmap/icon_more" />

            <Button
                android:id="@+id/bt_send"
                android:layout_width="@dimen/x_60"
                android:layout_height="@dimen/x_50"
                android:textColor="@color/white"
                android:background="@drawable/send_button_background"
                android:text="@string/send"
                android:visibility="gone"/>


        </LinearLayout>

