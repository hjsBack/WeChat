<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:background="@color/layoutBackground"
    tools:context="cn.csu.software.wechat.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/layoutBackground">

        <TextView
            android:id="@+id/tv_tab_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x_34"
            android:layout_marginLeft="@dimen/x_18"
            android:layout_marginTop="@dimen/x_18"
            android:textSize="@dimen/x_24"
            android:textColor="#000000"
            android:text="@string/tab_name_message"/>

        <RelativeLayout
            android:id="@+id/rl_search"
            android:layout_width="@dimen/x_80"
            android:layout_height="@dimen/x_70"
            android:layout_toStartOf="@id/rl_add"
            android:background="@drawable/selector_button_color_icon">

        <ImageButton
            android:id="@+id/bt_search"
            android:layout_width="@dimen/x_32"
            android:layout_height="@dimen/x_32"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_icon_search"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_add"
            android:layout_width="@dimen/x_80"
            android:layout_height="@dimen/x_70"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_button_color_icon">

                <ImageView
                    android:layout_width="@dimen/x_32"
                    android:layout_height="@dimen/x_32"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_icon_roundadd"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x_05"
            android:background="@color/blackLine"
            android:layout_marginTop="@dimen/x_70"/>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x_05"
        android:background="@color/blackLine" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@/drawable/selector_tab_color"
        app:itemTextColor="@/drawable/selector_tab_color"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation_tab">

    </android.support.design.widget.BottomNavigationView>

</LinearLayout>
